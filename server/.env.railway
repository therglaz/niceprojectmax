# Server Configuration
PORT=3000
NODE_ENV=production

# Database Configuration - Railway will provide a DATABASE_URL environment variable
# DATABASE_URL is set automatically by Railway

# JWT Configuration
JWT_SECRET=replace_with_strong_secret_key
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Make.com API Integration
MAKE_API_KEY=replace_with_real_api_key

# Logging
LOG_LEVEL=info

# Email Configuration (for future implementation)
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_USER=user@example.com
EMAIL_PASSWORD=replace_with_real_password
EMAIL_FROM=noreply@automateeasy.com 